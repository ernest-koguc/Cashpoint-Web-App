@page
@model IndexModel
@{
    ViewData["Title"] = "Withdrawal";
}
<form method="post" class="row" asp-page="index">
<label asp-for="MoneyWithdraw.Value">Money to withdraw:</label>
    <div class="col-3">

        <input class="form-control" asp-for=MoneyWithdraw.Value />
        <span asp-validation-for="MoneyWithdraw.Value" class="text-danger"></span>
    </div>
    <div class="col-2 d-flex">
    <button class="btn btn-danger align-self-start" type="submit">Withdraw</button>
    </div>
    <div class="col-3">
        <p><strong>Bills:</strong></p>
        <p>@ViewData["200"]</p>
        <p>@ViewData["100"]</p>
        <p>@ViewData["50"]</p>
        <p>@ViewData["20"]</p>
        <p>@ViewData["10"]</p>
    </div>
    <div class="col-2">
        <p><strong>Message:</strong></p>
@if (ViewData["ErrorMessage"] is not null)
{

        <p class="text-danger">@ViewData["ErrorMessage"]!</p>

}
    </div>
    <div class="col-2">
        <p class="text-success"><strong>AccountBalance:</strong></p>
@if (ViewData["UserBalance"] is not null)
{

            <p>@ViewData["UserBalance"] PLN</p>

}
    </div>
</form>


@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>